{
  "name": "@kb-labs/plugin-runtime",
  "version": "0.1.0",
  "description": "Runtime environment for KB Labs plugins, handling execution, permissions, and sandboxing",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./src/events/index.js": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm clean && tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ignore-pattern 'dist/**'",
    "lint:fix": "eslint . --fix --ignore-pattern 'dist/**'",
    "test": "vitest run -c ../../vitest.config.ts",
    "test:watch": "vitest -c ../../vitest.config.ts"
  },
  "dependencies": {
    "@kb-labs/setup-operations": "workspace:*",
    "@kb-labs/core-types": "workspace:*",
    "@kb-labs/api-contracts": "workspace:*",
    "@kb-labs/plugin-manifest": "workspace:*",
    "@kb-labs/plugin-contracts": "workspace:*",
    "@kb-labs/sandbox": "workspace:*",
    "execa": "^8.0.0",
    "minimatch": "^10.0.1",
    "semver": "^7.6.3",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@kb-labs/devkit": "workspace:*",
    "@types/minimatch": "^6.0.0",
    "@types/node": "^24.3.3",
    "@types/semver": "^7.7.1",
    "@typescript-eslint/eslint-plugin": "^8",
    "@typescript-eslint/parser": "^8",
    "eslint": "^9",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  }
}

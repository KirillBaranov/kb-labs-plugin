{
  "name": "@kb-labs/plugin-execution-factory",
  "version": "0.1.0",
  "description": "Execution backend factory for KB Labs plugins - extracted to break circular dependencies",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm clean && tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@kb-labs/core-contracts": "link:../../../kb-labs-core/packages/core-contracts",
    "@kb-labs/core-ipc": "link:../../../kb-labs-core/packages/core-ipc",
    "@kb-labs/core-platform": "link:../../../kb-labs-core/packages/core-platform",
    "@kb-labs/plugin-contracts": "workspace:*",
    "@kb-labs/plugin-runtime": "workspace:*"
  },
  "devDependencies": {
    "@kb-labs/devkit": "link:../../../kb-labs-devkit",
    "@types/node": "^24.3.3",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "kb-labs",
    "plugin",
    "execution",
    "backend",
    "factory"
  ],
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}

{
  "name": "@kb-labs/plugin-runtime",
  "version": "0.1.0",
  "description": "Plugin System Runtime - Context factory, sandboxed shims, and APIs",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./sandbox": {
      "import": "./dist/sandbox/index.js",
      "types": "./dist/sandbox/index.d.ts"
    },
    "./sandbox/bootstrap": {
      "import": "./dist/sandbox/bootstrap.js",
      "types": "./dist/sandbox/bootstrap.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm clean && tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@kb-labs/plugin-contracts": "workspace:*",
    "@kb-labs/shared-cli-ui": "link:../../../kb-labs-shared/packages/shared-cli-ui",
    "@kb-labs/core-runtime": "link:../../../kb-labs-core/packages/core-runtime"
  },
  "devDependencies": {
    "@kb-labs/devkit": "link:../../../kb-labs-devkit",
    "@types/node": "^24.3.3",
    "@vitest/ui": "^3.0.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vitest": "^3.0.0"
  },
  "keywords": [
    "kb-labs",
    "plugin",
    "runtime",
    "v3"
  ],
  "license": "MIT"
}

{
  "name": "@kb-labs/plugin-execution",
  "version": "1.0.0",
  "description": "Universal execution layer for KB Labs plugins",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./http": {
      "types": "./dist/http/index.d.ts",
      "import": "./dist/http/index.js",
      "require": "./dist/http/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/websocket": "^11.0.1",
    "@kb-labs/core-contracts": "^1.0.0",
    "@kb-labs/core-ipc": "^1.0.0",
    "@kb-labs/core-runtime": "workspace:*",
    "@kb-labs/plugin-contracts": "workspace:*",
    "@kb-labs/plugin-execution-factory": "workspace:*",
    "@kb-labs/plugin-runtime": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.3.3",
    "@types/ws": "^8.5.13",
    "fastify": "^4.28.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4",
    "ws": "^8.18.0",
    "@kb-labs/devkit": "^1.0.0"
  },
  "peerDependencies": {
    "fastify": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "fastify": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
